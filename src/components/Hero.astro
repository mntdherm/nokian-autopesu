<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Ammattimaista autopesua Nokialla</h1>
      <p class="hero-subtitle">Pidämme huolta autostasi – Puhdas auto, tyytyväinen kuljettaja</p>
      <div class="hero-buttons">
        <a href="#palvelut" class="btn">Katso palvelumme</a>
        <a href="#yhteystiedot" class="btn btn-outline">Varaa pesu</a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/hero-background.jpg');
    background-size: cover;
    background-position: center;
    color: white;
    text-align: center;
    padding: 8rem 0;
    margin-top: 80px;
    position: relative;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: 1.3rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .btn-outline {
    background-color: transparent;
    border: 2px solid white;
  }

  .btn-outline:hover {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 6rem 0;
    }

    .hero-title {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-buttons {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
